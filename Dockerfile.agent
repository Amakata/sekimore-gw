FROM python:3.11-slim

# Install network utilities required by agent-setup.sh
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        iproute2 \
        iputils-ping \
        dnsutils \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /

# The agent-setup.sh script will be mounted at runtime
CMD ["/agent-setup.sh"]
